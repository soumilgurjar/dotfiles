{
    "title": "App Specific Modifications",
    "rules": [
        {
            "description": "Semicolon <-> Underscore for Finder, Terminal, VS Code and PyCharm",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon"                    
                    },
                    "to": {
                        "key_code": "hyphen",
                        "modifiers":[
                            "shift"
                        ]
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder$",
                                "^com\\.microsoft\\.VSCode",
                                "^com\\.apple\\.Terminal",
                                "^com\\.jetbrains\\.pycharm"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "hyphen",
                        "modifiers":{
                            "mandatory": ["shift"]
                        }
                    },
                    "to": {
                        "key_code": "semicolon"                    
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder$",
                                "^com\\.microsoft\\.VSCode",
                                "^com\\.apple\\.Terminal",
                                "^com\\.jetbrains\\.pycharm"
                            ]
                        }
                    ]
                }
            ] 
        }
    ]
}