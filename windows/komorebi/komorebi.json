{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.25/schema.json",
    "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
    "window_hiding_behaviour": "Cloak",
    "mouse_follows_focus": false,
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 4,
    "default_container_padding": 4,
    "border": true,
    "border_width": 4,
    "border_offset": -1,
    "border_colours": {
        "single": "#42a5f5",
        "stack": "#00a542",
        "monocle": "#ff3399",
        "unfocused": "#808080"
    },
    "stackbar": {
        "height": -5,
        "mode": "OnStack",
        "tabs": {
            "width": 300,
            "focused_text": "#00a542",
            "unfocused_text": "#b3b3b3",
            "background": "#141414"
        }
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "I",
                    "layout": "UltrawideVerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "brave.exe"
                        },
                        {
                            "kind": "Exe",
                            "id": "WindowsTerminal.exe"
                        }
                    ]
                },
                {
                    "name": "II",
                    "layout": "BSP",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "explorer.exe"
                        }
                    ]
                },
                {
                    "name": "III",
                    "layout": "UltrawideVerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "ApplicationFrameHost.exe"
                        },
                        {
                            "kind": "Exe",
                            "id": "Enpass.exe"
                        }
                    ]
                },
                {
                    "name": "IV",
                    "layout": "UltrawideVerticalStack",
                    "initial_workspace_rules": [
                        {
                            "kind": "Exe",
                            "id": "Acrobat.exe"
                        }
                    ]
                },
                {
                    "name": "V",
                    "layout": "UltrawideVerticalStack"
                },
                {
                    "name": "VI",
                    "layout": "UltrawideVerticalStack"
                },
                {
                    "name": "VII",
                    "layout": "UltrawideVerticalStack"
                }
            ]
        }
    ]
}
